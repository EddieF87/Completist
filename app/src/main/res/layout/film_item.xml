<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="xyz.sleekstats.completist.databinding.BindingUtils"/>
        <variable
            name="film"
            type="xyz.sleekstats.completist.model.FilmByPerson"/>
    </data>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/smallMargin"
    card_view:cardBackgroundColor="@{film.watchType > 1 ? @color/colorWatched : @color/colorAccent}"
    card_view:cardCornerRadius="@dimen/cardCornerRadius"
    card_view:cardElevation="@dimen/cardElevation"
    card_view:contentPadding="5dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    >


    <ImageView
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        app:filmItemPoster="@{film.poster_path}"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:textColor="@color/colorAccent"
        android:minLines="2"
        android:maxLines="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/pctTextSize"
        android:text="@{film.title}"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingTop="@dimen/smallMargin"
        >

        <ImageView
            android:id="@+id/watched_btn"
            android:paddingEnd="@dimen/largeBtnPadding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_green_24dp"
            android:tint="@color/colorAccent"
            android:alpha="@{film.watchType > 1 ? 1f : .3f}"
            />

        <ImageView
            android:id="@+id/later_btn"
            android:paddingStart="@dimen/defaultBtnPadding"
            android:paddingEnd="@dimen/defaultBtnPadding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_watch_later_gold_24dp"
            android:tint="@color/colorAccent"
            android:alpha=".3"
            />

        <ImageView
            android:id="@+id/ignore_btn"
            android:paddingStart="@dimen/largeBtnPadding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorAccent"
            android:alpha=".3"
            android:onClick="itemClick"
            />
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
</layout>